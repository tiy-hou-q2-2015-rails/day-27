<h1>Sign in!</h1>

<%= form_tag auth_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control"  %>
  </div>

  <div>
    <%= submit_tag "Sign in", class: "btn btn-primary" %> or <%= link_to "Sign Up", new_user_path %>
  </div>
<% end %>
